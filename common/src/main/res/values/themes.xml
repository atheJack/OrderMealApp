<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OrderMealApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="splashStyle" parent="Theme.OrderMealApp">
        <item name="android:windowBackground">@drawable/bg_welcome</item>
    </style>

    <style name="normalText">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="normalBlackText">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="titleBarText">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="normalSmallText">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="normalBigText">
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="normalBigBoldText" parent="normalBigText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="normalBigBlackBoldText" parent="normalBigBoldText">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="normalBigRedBoldText" parent="normalBigBoldText">
        <item name="android:textColor">#ff0000</item>
    </style>

    <style name="normalBigWhiteBoldText" parent="normalBigBoldText">
        <item name="android:textColor">#ffffff</item>
    </style>
</resources>