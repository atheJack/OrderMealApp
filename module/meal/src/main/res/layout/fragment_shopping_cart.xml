<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_shop_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="#48000000"
        android:alpha="0.6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/bg_shop_cart"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_height="300dp">
        <TextView
            android:id="@+id/tv_test"
            android:text="已购商品"
            android:background="@drawable/bg_shop_cart_top"
            android:gravity="center"
            style="@style/normalSmallText"
            android:layout_width="match_parent"
            android:layout_height="36dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_shop_food_list"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"/>
        <ImageView
            android:id="@+id/iv_no_food"
            android:visibility="gone"
            android:contentDescription="空空如也"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="0dp"/>
    </LinearLayout>
</FrameLayout>